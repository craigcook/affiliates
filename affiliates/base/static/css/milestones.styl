@import 'lib.styl';

// Milestones

.timeline {
    background: url(/static/img/milestone-line.png) 30px top repeat-y;
    position: relative;
    margin: 60px 0;

    .milestone {
        margin: 0 0 20px;
        min-height: 60px;
        padding: 10px 0 0 85px;
        background: url(/static/img/milestone-dot-mid.png) 21px 10px no-repeat;
        position: relative;

        h3 {
            {normalize-heading}
            font-size: 18px;
        }
    }

    .milestone:first-child {
        top: -30px;
        margin-bottom: -10px;
        background-image: url(/static/img/milestone-dot-last.png);
    }

    .milestone:last-child {
        bottom: -40px;
        margin-top: -40px;
        background-image: url(/static/img/milestone-dot-first.png);
    }
}



//*----------------------------------------------------------------*/
// @Tablet layout: 760px

@media $media-query-tablet {

    .timeline {
        background-position: center top;
        position: relative;
        margin: 60px 0;

        .milestone {
            padding-left: 400px;
            background-position: center center;
        }

        .milestone:nth-child(even) {
            padding-right: 400px;
            padding-left: 0;
            text-align: right;
        }
    }
}

//*----------------------------------------------------------------*/
// @Desktop layout: 1000px

@media $media-query-desktop {

    .timeline {
        background-position: center top;
        position: relative;
        margin: 60px 0;

        .milestone {
            padding-left: 530px;
            background-position: center top;
        }

        .milestone:nth-child(even) {
            padding-right: 530px;
            padding-left: 0;
            text-align: right;
        }
    }

}
