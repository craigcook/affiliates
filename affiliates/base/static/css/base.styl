// Global styling and layout

@import 'fonts.styl';
@import 'reset.styl';
@import 'lib.styl';



//*----------------------------------------------------------------*/
// @General elements

html {
    background: #fff;
    font-size: $base-font-size;
    line-height: 1.5;
    -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
}

body {
    font-family: 'Open Sans', sans-serif;
    color: $primary-text-color;
    background: #fff;
}

// We most often use lists for structure and don't style them as lists.
// Use a .prose class for lists appearing in normal content that need normal styling.
ol.prose {
    list-style: decimal;
    margin-left: 40px;
}

ul.prose {
    list-style: disc;
    margin-left: 40px;

    ul {
        list-style: circle;
        margin-left: 40px;
    }
}

img.avatar {
    border: 3px solid $light-text-color;
    border-radius: 100%;
}



//*----------------------------------------------------------------*/
// @Headings

h1, h2, h3, h4, h5, h6, legend {
    color: $secondary-text-color;
    font-family: 'Open Sans Light', sans-serif;
    font-weight: normal;
    letter-spacing: -.03em;
    line-height: 1.1;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, .35);
}

h1,
.page-title,
.section-title {
    font-size: 48px;
}

h2 {
    font-size: 36px;
}

h3 {
    font-size: 28px;
}

h4, legend {
    font-size: 20px;
}

h5 {
    font-size: 16px;
    letter-spacing: normal;
}

h6 {
    font-size: 14px;
    letter-spacing: normal;
}

.page-title {
    text-align: center;
    margin: 0 auto .5em;
}

.section-title {
    text-align: center;
    margin: 30px auto .5em;
}



//*----------------------------------------------------------------*/
// @Links
a:link {
    color: $link-color;
    text-decoration: underline;
}

a:visited {
    color: desaturate($link-color, 30%);
}

a:hover,
a:focus,
a:active {
    color: darken($link-color, 30%);
}

.go:after {
    content: " Â»";
    white-space: nowrap;
}

// @Buttons
// Standard blue buttons
.button,
.button:link,
.button:visited {
    background-color: #276195;
    background-image:         linear-gradient(#3c88cc, #276195);
    background-image: -webkit-linear-gradient(#3c88cc, #276195);
    border-radius: .25em;
    border: 0;
    color: #fff;
    cursor: pointer;
    display: inline-block;
    min-width: 100px;
    padding: .25em 25px;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 0 rgba(0, 0, 0, .25);
    -webkit-box-shadow: 0 2px 0 0 rgba(0, 0, 0, .1), inset 0 -2px 0 0 rgba(0, 0, 0, .2);
            box-shadow: 0 2px 0 0 rgba(0,0,0,.1), inset 0 -2px 0 0 rgba(0, 0, 0, .2);
    -webkit-transition: -webkit-box-shadow linear .25s;
       -moz-transition: box-shadow linear .25s;
            transition: box-shadow linear .25s;
}

.button:hover,
.button:focus,
.button:active {
    color: #fff;
    text-decoration: none;
    background-color: #3089d8;
    -webkit-box-shadow: 0 2px 0 0 rgba(0, 0, 0, .1), inset 0 -2px 0 0 rgba(0, 0, 0,.2), inset 0 12px 24px 2px #3089d8;
            box-shadow: 0 2px 0 0 rgba(0, 0, 0,.1), inset 0 -2px 0 0 rgba(0, 0, 0,.2), inset 0 12px 24px 2px #3089d8;
}

.button:focus {
  outline-color: #484848;
}

// Alternative orange buttons
.button.secondary {
    background-color: #e46322;
    background-image: -webkit-linear-gradient(#f7921e, #e46322);
    background-image:         linear-gradient(#f7921e, #e46322);
}
.button.secondary:hover,
.button.secondary:focus,
.button.secondary:active {
  -webkit-box-shadow: 0 2px 0 0 rgba(0, 0, 0, .1), inset 0 -2px 0 0 rgba(0, 0, 0,.2), inset 0 12px 24px 2px #f79e20;
          box-shadow: 0 2px 0 0 rgba(0, 0, 0, .1), inset 0 -2px 0 0 rgba(0, 0, 0,.2), inset 0 12px 24px 2px #f79e20;
}



//*----------------------------------------------------------------*/
// @Layout containers

#outer-wrapper {
    position: relative;
    border-top: 2px solid #fff;
    background: $light-gray url('/static/img/light-grain.png');
}

.section {
    padding: 15px 0;
    border-bottom: 1px solid rgba(0, 0, 0, .15);
}

.page-head {
    {section-dark}

    text-align: center;
    padding-top: 120px;
    margin-top: -125px;

    .tagline {
        font-size: 24px;
        margin: -.25em 0 1.5em;
    }
}

.section:last-child {
    border-bottom: 0;
}

.contain {
    padding: 0 20px;
    margin: 0 auto;
    position: relative;
    clearfix();
}

.notice {
    background: rgba( 255, 255, 255, .35);
    border-radius: .5em;
    box-shadow: 0 1px 2px rgba(0, 0, 0, .1);
    color: $secondary-text-color;
    display: inline-block;
    font-size: 20px;
    font-style: italic;
    margin: .5em auto 1em;
    padding: 10px 30px;
    text-shadow: 0 -1px 0 rgba(255, 255, 255, .25);

    p {
        margin: 0;
    }
}

// More height for tall viewports
@media screen and (min-height: 600px) {

    .section {
        padding: 30px 0;
    }

    .page-head {
        padding-top: 175px;
        margin-top: -125px;
        margin-bottom: 48px;
    }

}


//*----------------------------------------------------------------*/
// @Header

#masthead .contain {
    padding-top: 48px;
    height: 77px;
}

#masthead #tabzilla {
    position: absolute;
    right: 15px;
    top: 0;
}

#nav-main {
    position: absolute;
    top: 10px;
    right: 160px;

    ul {
        list-style: none;
    }

    li {
        display: inline-block;
        font-size: 14px;
        margin: 0 0 .25em;
        padding: 0 14px 0 16px;
        text-transform: uppercase;

        &.user,
        &.signin {
            border-left: 1px solid #fff;
        }
    }

    {light-links}

    a {
        text-decoration: none;
    }
}


//*----------------------------------------------------------------*/
// @Footer

#footer {
    background: $dark-gray url('/static/img/dark-grain.png') repeat;
    color: $light-text-color;
    font-size: 12px;
    padding: 48px 0;

    {invert-links}
}

.footer-logo a {
    opacity: .8;
    transition: opacity .1s linear;

    &:hover,
    &:focus {
        opacity: 1;
    }
}



//*----------------------------------------------------------------*/
// @Leaderboard

table.leaderboard {
    width: 80%;
    margin: 0 auto 1.5em;

    th, td {
        text-align: left;
        padding: 20px 10px;
        vertical-align: top;
        font-size: 24px;
        font-weight: normal;
        line-height: 1.1;
    }

    thead th {
        font-style: italic;
        font-size: 18px;
    }

    tbody tr:nth-child(odd) {
        background: rgba(130, 140, 150, .1);
    }

    .rank {
        width: 30px;
        text-align: center;
    }

    .vcard {
        padding-left: 80px;
        position: relative;

        a:link,
        a:visited {
            color: $secondary-text-color;
            text-decoration: none;
        }

        a:hover,
        a:focus,
        a:active {
            color: darken($link-color, 30%);
            text-decoration: underline;
        }

        .avatar {
            float: left;
            margin: -15px 0 -15px -80px;
            width: 55px;
            height: 55px;
        }

        .fn {
            font-size: 22px;
            font-weight: normal;
            display: block;
            margin-top: -3px;
            margin-bottom: -.35em;
        }

        .website {
            font-size: 14px;
            margin-bottom: -20px;
        }
    }

    .clicks {
        width: 30%;
        font-weight: bold;
        font-style: italic;
        font-size: 26px;
    }

}



//*----------------------------------------------------------------*/
// @Banner list/gallery

.banners-list {
    overflow: hidden;

    .banner {
        width: 220px;
        margin: 0 auto 1.5em;
        text-align: center;

        a {
            text-decoration: none;
            color: inherit;
            display: block;
            padding: 155px 10px 10px;
            position: relative;
            border-radius: 6px;
            transition: background ease-in-out .25s;

            &:hover,
            &:focus,
            &:active {
                background: lighten($light-gray, 25%);
                background: rgba(255, 255, 255, .25);
            }

            &:hover .name,
            &:focus .name {
                text-decoration: underline;
            }
        }

        .flag {
            background: #374655;
            background: rgba(55, 70, 85, .85);
            padding: .15em 6px;
            color: $light-text-color;
            position: absolute;
            top: 25px;
            right: 50%;
            margin-right: -75px;
            text-align: right;
            font-style: normal;
            font-size: 12px;
            text-transform: uppercase;
            z-index: 5;
        }
    }

    .name {
        {normalize-heading}
        font-size: 18px;
        margin-bottom: .5em;
    }

    .desc {
        font-size: 14px;
        margin: 0;
    }

    .preview {
        position: absolute;
        top: 10px;
        left: 50%;
        margin-left: -66px;
        width: 125px;
        height: 125px;
        background: #f0f8fb;
        padding: 4px;
    }

    .text .preview {
        background: #5e7489;
        color: $light-text-color;
        width: 105px;
        height: 105px;
        padding: 10px;
        border: 4px solid #f0f8fb;
        text-overflow: ellipsis;
        overflow: hidden;
        font-size: 12px;
        line-height: 1.4;
        text-align: left;
    }
}



//*----------------------------------------------------------------*/
// @Tablet layout: 760px

@media $media-query-tablet {

    h1,
    .section-title,
    .page-title {
        font-size: 48px;
    }

    h2,  {
        font-size: 32px;
    }

    h3 {
        font-size: 28px;
    }

    h4, legend {
        font-size: 24px;
    }

    .page-head .tagline {
        margin: -.25em (($grid-column-width * 2) + ($grid-gutter-width * 2)) 1.5em;
    }

    .contain {
        width: $width-tablet - ($grid-gutter-width * 2);
    }

    .footer-license,
    .footer-lang {
        span_narrow(3);
    }

    .footer-logo,
    .footer-nav {
        span_narrow(2);
    }

    .footer-license {
        margin-right: $grid-narrow-column-width + $grid-gutter-width;
    }

    .banners-list .banner {
        margin: 0 10px 1.5em;
        float: left;
    }

    .banners-list .banner:nth-child(4n+1) {
        clear: none;
    }

    .banners-list .banner:nth-child(3n+1) {
        clear: left;
    }

}



//*----------------------------------------------------------------*/
// @Desktop layout: 1000px

@media $media-query-desktop {

    .contain {
        width: $width-desktop - ($grid-gutter-width * 2);
    }

    .footer-license,
    .footer-lang {
        span(3);
    }

    .footer-logo,
    .footer-nav {
        span(2);
    }

    .footer-license {
        margin-right: $grid-column-width + $grid-gutter-width;
    }

    .banners-list .banner:nth-child(3n+1) {
        clear: none;
    }

    .banners-list .banner:nth-child(4n+1) {
        clear: left;
    }

}

