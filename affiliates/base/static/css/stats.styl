@import 'lib.styl';

// Stats

.stats {
    margin: 20px 0;

    li {
        margin: 0;
        font-size: 18px;
        text-align: left;
        padding: 20px 0 20px 100px;
        position: relative;
        border-width: 1px 0;
        border-top: 1px solid rgba( 255, 255, 255, .25);
        border-bottom: 1px solid rgba( 0, 0, 0, .25);

        &:first-child {
            border-top: 0;
        }

        &:last-child {
            border-bottom: 0;
        }

        strong {
            font-size: 28px;
            font-style: italic;
        }

        &:before {
            width: 80px;
            height: 50px;
            display: block;
            font-size: 60px;
            line-height: 1;
            position: absolute;
            top: 10px;
            left: 20px;
            font-family: 'Font Awesome';
            color: darken($medium-gray, 15%);
            text-shadow: 0 0 3px rgba(255, 255, 255, .25);
        }

        &.ranking:before {
            content: '\f091';
        }

        &.downloads:before {
            content: '\f019';
        }

        &.banners:before {
            content: '\f02e';
        }

        &.clicks:before {
            content: '\f05b';
        }
    }
}



//*----------------------------------------------------------------*/
// @Tablet layout: 760px

@media $media-query-tablet {

    .stats {

        li {
            float: left;
            margin: 0 0 20px;
            width: 33%;
            padding: 60px 0 0;
            text-align: center;
            border-top: 0;
            border-bottom: 0;
            border-left: 1px solid rgba( 255, 255, 255, .25);
            border-right: 1px solid rgba( 0, 0, 0, .25);

            &:first-child {
                border-left: 0;
            }

            &:last-child {
                border-right: 0;
            }

            strong {
                font-size: 28px;
                font-style: italic;
            }

            &:before {
                width: 100%;
                height: 50px;
                display: block;
                font-size: 60px;
                line-height: 1;
                position: absolute;
                top: 0;
                left: 0;
            }

        }
    }

}
